		override public function create():void 
		{
			super.create();
			
			// create a tile map from an array
			level = new FlxTilemap();
			level.loadMap(FlxTilemap.arrayToCSV(mapdata,40),FlxTilemap.ImgAuto,0,0,FlxTilemap.AUTO);
			add(level);
			
			// create B sprite and add it
			A = new FlxSprite(30, 30);
			A.makeGraphic(10, 10, 0xffff00ff);
			A.acceleration.y = 200;
			A.maxVelocity = new FlxPoint(90, 200);
			A.drag.x = A.maxVelocity.x * 4;
			add(A);
			
			// create B sprite and add it
			B = new FlxSprite(200, 30);
			B.makeGraphic(10, 10, 0xff0000ff);
			B.acceleration.y = 200;
			B.maxVelocity = new FlxPoint(90, 200);
			B.drag.x = B.maxVelocity.x * 4;
			add(B);
			
			// add hud group and item(button)
			HUD = new FlxGroup();
			hudItem = new FlxButton(0, 0, "Hud item", function():void { trace("hud button was clicked"); } );
			HUD.add(hudItem);
			add(HUD);
			
			// an array that will hold our two cameras
			camArray = new Array();
			
			// create a camera
			camA = new FlxCamera(0, 20, FlxG.width / 2, FlxG.height - 10);
			camA.bgColor = 0xffc0c0c0;
			FlxG.addCamera(camA); // added to FlxG.cameras array
			camA.follow(A); // follow A
			camArray.push(camA); // adding our cams to our custom array
			
			// zoom will also affect your width and height!
			camB = new FlxCamera(FlxG.width / 2, 20, FlxG.width / 4, (FlxG.height / 2) - 10, 2); 
			camB.bgColor = 0xffeeeeee;
			FlxG.addCamera(camB);
			camB.follow(B);
			camArray.push(camB); // adding our cams to an array
			
			// adding the hud cam
			camHud = new FlxCamera(0, 0, FlxG.width, 20);
			// all elements in the HUD FlxGroup have their camera array set to a new array with just the hud camera
			HUD.setAll("cameras", new Array(camHud), true);
			FlxG.addCamera(camHud);

			// Our custom camera array has two cameras and we only want things to be drawn on these two cameras
			// so we reset the cameras array in each item on the stage to our custom camera array.
			// Otherwise the FlxG.cameras array is used. In this case it will contain a default camera, camA, camB and camHud
			A.cameras = camArray;
			B.cameras = camArray;
			level.cameras = camArray;
			
			// hide our default camera - FlxG.cameras[0]
			FlxG.camera.visible = false;
			
			// show the mouse
			FlxG.mouse.show();
			
		}
		
		override public function update():void 
		{
			FlxG.collide();
			
			A.acceleration.x = 0;
			
			if (FlxG.keys.pressed("D")) A.acceleration.x = +A.maxVelocity.x * 2;
			if (FlxG.keys.pressed("A")) A.acceleration.x = -A.maxVelocity.x * 2;
			
			if (FlxG.keys.justPressed("W") && A.isTouching(FlxObject.FLOOR)) {
				A.velocity.y -= A.maxVelocity.y/1.4;
			}
			
			B.acceleration.x = 0;
			
			if (FlxG.keys.pressed("RIGHT")) B.acceleration.x = +B.maxVelocity.x * 2;
			if (FlxG.keys.pressed("LEFT")) B.acceleration.x = -B.maxVelocity.x * 2;
			
			if (FlxG.keys.justPressed("UP") && B.isTouching(FlxObject.FLOOR)) {
				B.velocity.y -= B.maxVelocity.y/1.4;
			}
			
			super.update();
		}
